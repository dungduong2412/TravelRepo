generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
}

enum MerchantStatus {
  DRAFT
  ACTIVE
}

model Merchant {
  id                   String         @id @default(uuid())
  ownerUserId          String
  name                 String
  description          String?
  commissionRate       Float
  customerDiscountRate Float
  status               MerchantStatus @default(DRAFT)
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  @@index([ownerUserId])
}

enum CollaboratorStatus {
  DRAFT
  ACTIVE
}

model Collaborator {
  id                String             @id @default(uuid())
  ownerUserId       String
  fullName          String
  phone             String
  email             String
  bankName          String
  bankAccountNumber String
  status            CollaboratorStatus @default(DRAFT)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([ownerUserId])
}
