enum CollaboratorTier {
  SILVER
  GOLD
  PLATINUM
}

enum CollaboratorStatus {
  DRAFT
  ACTIVE
  SUSPENDED
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
}

enum MerchantStatus {
  DRAFT
  ACTIVE
}

model Merchant {
  id                   String         @id @default(uuid())
  ownerUserId          String
  name                 String
  description          String?
  commissionRate       Float
  customerDiscountRate Float
  status               MerchantStatus @default(DRAFT)
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  @@index([ownerUserId])
}

model Collaborator {
  id                String             @id @default(uuid())
  ownerUserId       String
  fullName          String
  phone             String
  email             String
  bankName          String
  bankAccountNumber String

  tier              CollaboratorTier   @default(SILVER)
  qrToken           String             @unique

  status            CollaboratorStatus @default(DRAFT)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([ownerUserId])
  @@index([qrToken])
}
enum AttributionStatus {
  ACTIVE
  DISABLED
}

model Attribution {
  id             String             @id @default(uuid())
  merchantId     String
  collaboratorId String
  qrToken        String             @unique
  status         AttributionStatus  @default(ACTIVE)
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@index([merchantId])
  @@index([collaboratorId])
}

